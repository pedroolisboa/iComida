RewriteEngine On

# Remover .php da URL
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ $1.php [L,QSA]

# Redirecionar HTTP para HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# Proteger o .htaccess
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# PÃ¡gina de Erro 404
ErrorDocument 404 ./404.php